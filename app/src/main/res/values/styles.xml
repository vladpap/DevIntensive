<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="fontCondenset">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- style for Linear layout cell header -->
    <style name="headerCellLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- style for vertical line header -->
    <style name="headerVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_white</item>
    </style>
    <!--style text view for header -->
    <style name="textViewHeader" parent="fontCondenset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
    <style name="textViewHeaderNumber" parent="textViewHeader">
        <item name="android:textSize">@dimen/font_large_28</item>
    </style>
    <style name="textViewHeaderText" parent="textViewHeader">
        <item name="android:textSize">@dimen/font_normal_15</item>
    </style>
    
    <!--Styles for row-->

    <style name="rowContayner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="rowTextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/spacing_large_56</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="rowEditText" parent="fontCondenset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_56</item>
        <item name="android:background">@color/color_light_grey</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="custom_dialog_progress">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
</resources>
